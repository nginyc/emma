extends layout

block content
  script.
    function submit() {
      var nos = document.getElementById('nos').value.split(',');
      fetch('http://eureka-env.us-east-1.elasticbeanstalk.com/call', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          "nos": nos
        })
      });
    }
  div(class='container')
        div(class='image_container')
            img(src='img/heroImage.png' class='hero-image')
        div(class='form_container')
            h1 Organize your meeting with us
            div(class='form')
                div(class='form_fields')
                    h5 Phone numbers
                    input#nos(type='text' class='text_box')
                div(class='form_fields')
                    h5 Time of meeting
                    input(type='text' class='text_box')
                button(onclick='submit()') Submit


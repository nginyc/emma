extends layout

block content
  script.
    function submit() {
      var nos = document.getElementById('nos').value.split(',');
      fetch('http://eureka-env.us-east-1.elasticbeanstalk.com/call', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          "nos": nos
        })
      });

      window.alert('Call scheduled!');
    }
  div(class='container')
        div(class='image_container')
            img(src='img/heroImage.png' class='hero-image')
            div(class='explanation_container')
                h3 - Calls everyone on time
                h3 - Records your key discussion points
                h3 - Sends them to everyone in your team
        div(class='form_container')
            div(class='title_container')
                img(src='img/Emma.png' class='image-icon')
                h4 Emma
            h1 Organize your meeting with us
            div(class='form')
                div(class='form_fields')
                    h5 Phone numbers
                    input#nos(type='text' class='text_box')
                div(class='form_fields-last')
                    h5 Time of meeting
                    input(type='text' class='text_box')
                button(class='button' onclick='submit()') Eureka!

